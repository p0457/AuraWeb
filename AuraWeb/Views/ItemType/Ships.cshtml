@model AuraWeb.Models.ShipsPageViewModel
@{
    ViewData["Title"] = "Ships";
    ViewData["Action"] = "Ships";
    ViewData["Query"] = Model.QueryName;
    ViewData["Count"] = Model.Ships.Count;
}

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark filter-container">
    <span class="navbar-brand filter-brand">Filters</span>
    <button class="navbar-toggler" type="button" style="background: darkgray;"
            data-toggle="collapse" 
            data-target="#filterOps" 
            aria-controls="filterOps" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="filterOps">
        <form asp-controller="ItemType" asp-action="Ships" method="get">
            <ul class="navbar-nav mr-auto">
                <li>
                    <select class="custom-select unset-border-radius unset-border transparent-bg-color" id="queryGroupInput" name="group">
                        @if (Model.QueryGroup == "All")
                        {
                            <option value="All" selected>All Groups</option>
                        }
                        else
                        {
                            <option value="All">All</option>
                        }
                        @foreach (string group in Model.ShipGroups)
                        {
                            @if (Model.QueryGroup == group)
                            {
                                <option value="@group" selected>
                                    @group
                                </option>
                            }
                            else
                            {
                                <option value="@group">
                                    @group
                                </option>
                            }
                        }
                    </select>
                </li>
                <li>
                    <select class="custom-select unset-border-radius unset-border transparent-bg-color" id="queryRaceInput" name="race">
                        @if (Model.QueryRace == "All")
                        {
                            <option value="All" selected>All Races</option>
                        }
                        else
                        {
                            <option value="All">All</option>
                        }
                        @foreach (string race in Model.ShipRaces)
                        {
                            var raceName = (String.IsNullOrWhiteSpace(race) ? "None" : race);
                            @if (Model.QueryRace == raceName)
                            {
                                <option value="@raceName" selected>
                                    @raceName
                                </option>
                            }
                            else
                            {
                                <option value="@raceName">
                                    @raceName
                                </option>
                            }
                        }
                    </select>
                </li>
                <li>
                    @if (!String.IsNullOrWhiteSpace(Model.QueryName))
                    {
                        <input type="text" class="form-control unset-border-radius unset-border transparent-bg-color" placeholder="Name" aria-label="Name" aria-describedby="queryNameInput" name="name" value="@Model.QueryName">
                    }
                    else
                    {
                        <input type="text" class="form-control unset-border-radius unset-border transparent-bg-color" placeholder="Name" aria-label="Name" aria-describedby="queryNameInput" name="name">
                    }
                </li>
                <li>
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Query</button>
                </li>
            </ul>
        </form>
    </div>
</nav>
<div class="row filter-compensator width-100 no-left-margin no-right-margin">
    <div class="col-12 no-padding only-scroll-y-unset width-100">
        <ul class="list-group list-group-flush">
            @foreach (var ship in Model.Ships)
            {
                <li class="list-group-item" style="padding:unset;">
                    <div class="row">
                        <div class="col-xl-2 col-lg-2 col-md-3 col-sm-4 col-5">
                            <img src="~/IEC/Renders/@(ship.Id).png" class="width-100 img-fluid img-thumbnail" />
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-9 col-sm-8 col-7 no-left-padding">
                            <div>
                                <h4>@ship.Name</h4>
                            </div>
                            <div>
                                <h6>@ship.Group.Name</h6>
                            </div>
                            <div>
                                <h7>
                                    @if (ship.Race != null)
                                    {
                                        <span>@ship.Race.Name</span>
                                    }
                                    else
                                    {
                                        <span>--</span>
                                    }
                                </h7>
                            </div>
                            <div>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="ItemType" asp-action="ItemTypeInfo" asp-route-id="@ship.Id">View Details</a>
                                        <div class="dropdown-divider"></div>
                                        <h6 class="dropdown-header">In-Game</h6>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a class="dropdown-item" asp-controller="ItemType" asp-action="ItemTypeInfoOpenInfoWindowForItemType" asp-route-id="@ship.Id">Open Info Window</a>
                                            <a class="dropdown-item" asp-controller="ItemType" asp-action="ItemTypeInfoOpenMarketWindowForItemType" asp-route-id="@ship.Id">Open Market Window</a>
                                        }
                                        else
                                        {
                                            <a class="dropdown-item">Must be logged in.</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>