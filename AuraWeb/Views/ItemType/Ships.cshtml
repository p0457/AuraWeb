@model AuraWeb.Models.ShipsPageViewModel
@{
    ViewData["Title"] = "Ships";
}
<div class="container page-content-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="ItemType" asp-action="Ships" method="get"
          class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search"
               placeholder="Search" aria-label="Search"
               name="query">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search Ships</button>
    </form>
    @if (!String.IsNullOrWhiteSpace(Model.Query))
    {
        <p>Query: @Model.Query</p>
    }
    <p>Result Count: @Model.Ships.Count</p>
    <table class="table table-dark table-sm table-hover table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Race</th>
                <th scope="col">Group</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody style="cursor: pointer;">
            @foreach (var ship in Model.Ships)
            {
            <tr>
                <th scope="row">@ship.Id</th>
                <td>@ship.Name</td>
                <td>
                    @if (ship.Race != null)
                    {
                        <span>@ship.Race.Name</span>
                    }
                    else
                    {
                        <span>--</span>
                    }
                </td>
                <td>@ship.Group.Name</td>
                <td>
                    @(Html.ActionLink("View Details", "ItemTypeInfo", "ItemType", new { id = ship.Id, query = Model.Query }))
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span>|</span>
                        @(Html.ActionLink("Open Info Window", "ShipsOpenInfoWindow", "ItemType", new { id = ship.Id, query = Model.Query }))
                        <span>|</span>
                        @(Html.ActionLink("Open Market Window", "ShipsOpenMarketWindow", "ItemType", new { id = ship.Id, query = Model.Query }))
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

