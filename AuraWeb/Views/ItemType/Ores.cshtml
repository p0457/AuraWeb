@model AuraWeb.Models.OresPageViewModel
@{
    ViewData["Title"] = "Ores";
}
<div class="container page-content-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="ItemType" asp-action="Ores" method="get"
          class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search"
               placeholder="Search" aria-label="Search"
               name="query">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search Ores</button>
    </form>
    @if (!String.IsNullOrWhiteSpace(Model.Query))
    {
        <p>Query: @Model.Query</p>
    }
    <p>Result Count: @Model.Ores.Count</p>
    @Html.DisplayFor(x => x.Ores, "OresTable")
</div>
