@model AuraWeb.Models.UniverseRegionsPageViewModel
@{
    ViewData["Title"] = "Regions";
}
<div class="container page-content-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="Universe" asp-action="Regions" method="get"
        class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" 
            placeholder="Search" aria-label="Search"
            name="query">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search Regions</button>
    </form>
    @if (!String.IsNullOrWhiteSpace(Model.Query))
    {
        <p>Query: @Model.Query</p>
    }
    <p>Result Count: @Model.Regions.Count</p>
    <table class="table table-dark table-sm table-hover table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Faction</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody style="cursor: pointer;">
            @foreach (var region in Model.Regions)
            {
                <tr onclick="location.href = '@(Url.Action("RegionInfo", "Universe", new { id = region.Id }))'">
                    <th scope="row">@region.Id</th>
                    <td>@region.Name</td>
                    <td>@region.FactionName</td>
                    <td>(@region.Position.X, @region.Position.Y, @region.Position.Z)</td>
                </tr>
            }
        </tbody>
    </table>
</div>