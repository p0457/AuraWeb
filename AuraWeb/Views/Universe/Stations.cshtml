@model AuraWeb.Models.UniverseStationsPageViewModel
@{
    ViewData["Title"] = "Stations";
}
<div class="container page-content-container">
    <h2>@ViewData["Title"]</h2>
    <form asp-controller="Universe" asp-action="Stations" method="get"
          class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search"
               placeholder="Search" aria-label="Search"
               name="query">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search Stations</button>
    </form>
    @if (!String.IsNullOrWhiteSpace(Model.Query))
    {
        <p>Query: @Model.Query</p>
    }
    <p>Result Count: @Model.Stations.Count</p>
    <table class="table table-dark table-sm table-hover table-responsive-md">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Security</th>
                <th scope="col">Position</th>
            </tr>
        </thead>
        <tbody style="cursor: pointer;">
            @foreach (var station in Model.Stations)
            {
                <tr onclick="location.href = '@(Url.Action("StationInfo", "Universe", new { id = station.Id }))'">
                    <th scope="row">@station.Id</th>
                    <td>@station.Name</td>
                    <td>@station.Security.Status</td>
                    <td>(@station.Position.X, @station.Position.Y, @station.Position.Z)</td>
                </tr>
            }
        </tbody>
    </table>
</div>