<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aura Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap-4.1.3/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap-4.1.3/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    <!--https://stackoverflow.com/questions/40316527/full-background-image-with-fade-effect-->
    <!--<div id="background">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>-->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Aura Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarOpts" aria-controls="navbarOpts" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarOpts">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="characterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Character</a>
                        <div class="dropdown-menu" aria-labelledby="characterDropdown">
                            <a asp-area="" asp-controller="Character" asp-action="Index" class="dropdown-item">Details</a>
                            <a asp-area="" asp-controller="Character" asp-action="Bookmarks" class="dropdown-item">Bookmarks</a>
                            <a asp-area="" asp-controller="Character" asp-action="KillsLosses" class="dropdown-item">Kills/Losses</a>
                            <a asp-area="" asp-controller="Character" asp-action="Fleet" class="dropdown-item">Fleet</a>
                            <a asp-area="" asp-controller="Character" asp-action="Skills" class="dropdown-item">Skills</a>
                        </div>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="marketDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Market</a>
                    <div class="dropdown-menu" aria-labelledby="marketDropdown">
                        <a asp-area="" asp-controller="Market" asp-action="Index" class="dropdown-item">Overview</a>
                        <a asp-area="" asp-controller="Market" asp-action="BestSellPrices" class="dropdown-item">Best Sell Prices</a>
                        <a asp-area="" asp-controller="Market" asp-action="BestBuyPrices" class="dropdown-item">Best Buy Prices</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="universeDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Universe</a>
                    <div class="dropdown-menu" aria-labelledby="universeDropdown">
                        <a asp-area="" asp-controller="Universe" asp-action="Index" class="dropdown-item">Overview</a>
                        <a asp-area="" asp-controller="Universe" asp-action="Regions" class="dropdown-item">Regions</a>
                        <a asp-area="" asp-controller="Universe" asp-action="Constellations" class="dropdown-item">Constellations</a>
                        <a asp-area="" asp-controller="Universe" asp-action="JumpRoutes" class="dropdown-item">Jump Routes</a>
                    </div>
                </li>
                @if (User.Identity.IsAuthenticated && User.HasClaim("Admin", "true"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="managementDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Management</a>
                        <div class="dropdown-menu" aria-labelledby="managementDropdown">
                            <a asp-area="" asp-controller="Management" asp-action="Index" class="dropdown-item">Settings</a>
                            <a href="/hangfire" class="dropdown-item">Server Jobs</a>
                        </div>
                    </li>
                }
            </ul>
            <ul class="navbar-nav mr navbar-login-container my-2 my-lg-0">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="Login" class="nav-link">
                            <img src="https://web.ccpgamescdn.com/eveonlineassets/developers/eve-sso-login-white-small.png" alt="LOG IN with EVE Online" />
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="Logout" class="nav-link">Logout</a>
                    </li>
                }
            </ul>
            <form asp-controller="Search" asp-action="SearchResults" method="get"
                class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" 
                    placeholder="Search" aria-label="Search"
                    name="query">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <form asp-controller="Search" asp-action="Index" method="get">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Advanced Search</button>
            </form>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <div id="footer" class="container">
            <footer>
                <p>&copy; 2018 - AuraWeb</p>
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
