    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Aura Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarOpts" aria-controls="navbarOpts" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarOpts">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" id="characterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Character</a>
                        <div class="dropdown-menu" aria-labelledby="characterDropdown">
                            <a asp-area="" asp-controller="Character" asp-action="Index" class="dropdown-item">Character Info</a>
                            <a asp-area="" asp-controller="Character" asp-action="KillsLosses" class="dropdown-item">Kills/Losses</a>
                            <a asp-area="" asp-controller="Character" asp-action="Bookmarks" class="dropdown-item">Bookmarks</a>
                            <a asp-area="" asp-controller="Character" asp-action="Fleet" class="dropdown-item">Fleet</a>
                            <a asp-area="" asp-controller="Character" asp-action="Skills" class="dropdown-item">Skills</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Management" asp-action="Index" class="nav-link">Management</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav mr navbar-login-container my-2 my-lg-0">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="Login" class="nav-link">
                            <img src="https://web.ccpgamescdn.com/eveonlineassets/developers/eve-sso-login-white-small.png" alt="LOG IN with EVE Online" />
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="Logout" class="nav-link">Logout</a>
                    </li>
                }
            </ul>
        </div>
    </nav>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - AuraWeb</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
