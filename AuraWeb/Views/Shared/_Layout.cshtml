<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aura Web</title>

    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap-4.1.3/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap-4.1.3/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body class="bg-dark text-light">
    <!--https://stackoverflow.com/questions/40316527/full-background-image-with-fade-effect-->
    <!--<div id="background">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>-->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="background-color:black !important;">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">Aura Web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarOpts" aria-controls="navbarOpts" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarOpts">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="characterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">@User.Identity.Name</a>
                        <div class="dropdown-menu" aria-labelledby="characterDropdown">
                            <a asp-controller="Character" asp-action="Index" class="dropdown-item">Details</a>
                            <a asp-controller="Character" asp-action="Bookmarks" class="dropdown-item">Bookmarks</a>
                            <a asp-controller="Character" asp-action="KillsLosses" class="dropdown-item">Kills/Losses</a>
                            <a asp-controller="Character" asp-action="Fleet" class="dropdown-item">Fleet</a>
                            <a asp-controller="Character" asp-action="Skills" class="dropdown-item">Skills</a>
                            <a asp-controller="Character" asp-action="Assets" class="dropdown-item">Assets</a>
                            <a asp-controller="Character" asp-action="Wallet" class="dropdown-item">Wallet</a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">Authentication</h6>
                            <a asp-controller="Auth" asp-action="Login" class="dropdown-item">Reauthenticate</a>
                            <a asp-controller="Auth" asp-action="Logout" class="dropdown-item">Logout</a>
                        </div>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="marketDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Market</a>
                    <div class="dropdown-menu" aria-labelledby="marketDropdown">
                        <a asp-controller="Market" asp-action="Opportunities" class="dropdown-item">Opportunities</a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Market" asp-action="BestSellPrices" class="dropdown-item">Best Sell Prices</a>
                        <a asp-controller="Market" asp-action="BestBuyPrices" class="dropdown-item">Best Buy Prices</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="universeDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Universe</a>
                    <div class="dropdown-menu" aria-labelledby="universeDropdown">
                        <a asp-controller="Universe" asp-action="Regions" class="dropdown-item">Regions</a>
                        <a asp-controller="Universe" asp-action="Constellations" class="dropdown-item">Constellations</a>
                        <a asp-controller="Universe" asp-action="Systems" class="dropdown-item">Systems</a>
                        <a asp-controller="Universe" asp-action="Stations" class="dropdown-item">Stations</a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="Universe" asp-action="JumpRoutes" class="dropdown-item">Jump Routes</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="itemTypeDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Items</a>
                    <div class="dropdown-menu" aria-labelledby="itemTypeDropdown">
                        <h6 class="dropdown-header">Ships</h6>
                        <a asp-controller="ItemType" asp-action="Ships" class="dropdown-item">Ships</a>
                        <a asp-controller="ItemType" asp-action="Modules" class="dropdown-item">Modules</a>
                        <div class="dropdown-divider"></div>
                        <h6 class="dropdown-header">Mining</h6>
                        <a asp-controller="ItemType" asp-action="Ores" class="dropdown-item">Ores</a>
                        <div class="dropdown-divider"></div>
                        <a asp-controller="ItemType" asp-action="ItemTypes" class="dropdown-item">All Item Types</a>
                    </div>
                </li>
                <li>
                    <a asp-controller="News" asp-action="Index" class="nav-link">News</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="linksDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Links</a>
                    <div class="dropdown-menu" aria-labelledby="linksDropdown">
                        <a class="dropdown-item" target="_NEW" href="http://www.eveonline.com/">EVE Official</a>
                        <a class="dropdown-item" target="_NEW" href="https://github.com/devfleet/awesome-eve">Awesome-EVE</a>
                        <a class="dropdown-item" target="_NEW" href="https://www.fuzzwork.co.uk/">Fuzzwork</a>
                        <a class="dropdown-item" target="_NEW" href="https://www.fuzzwork.co.uk/">zKillboard</a>
                        <a class="dropdown-item" target="_NEW" href="http://eve-radio.com">EVE Radio</a>
                        <a class="dropdown-item" target="_NEW" href="http://3rdpartyeve.net/">3rd Party EVE</a>
                        <a class="dropdown-item" target="_NEW" href="https://store.markeedragon.com/">Markee Dragon</a>
                        <a class="dropdown-item" target="_NEW" href="http://www.eve-bet.com/">EVE Bet</a>
                        <a class="dropdown-item" target="_NEW" href="https://wiki.eveuniversity.org/Main_Page">EVE UniWiki</a>
                        <a class="dropdown-item" target="_NEW" href="http://evebloggers.com/">EVE Bloggers</a>
                        <a class="dropdown-item" target="_NEW" href="http://www.isktheguide.com/">ISK Guide</a>
                        <a class="dropdown-item" target="_NEW" href="https://evepraisal.com/">Evepraisal</a>
                        <a class="dropdown-item" target="_NEW" href="https://eve-marketdata.com/">eve-marketdata</a>
                        <a class="dropdown-item" target="_NEW" href="https://eve-tracker.org/">Eve Tracker</a>
                    </div>
                </li>
                @if (User.Identity.IsAuthenticated && User.HasClaim("Admin", "true"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="managementDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-external="true">Admin</a>
                        <div class="dropdown-menu" aria-labelledby="managementDropdown">
                            <a href="/hangfire" class="dropdown-item">Server Jobs</a>
                        </div>
                    </li>
                }
            </ul>
            <ul class="navbar-nav mr navbar-login-container my-2 my-lg-0">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Auth" asp-action="Login" class="nav-link">
                            <img src="https://web.ccpgamescdn.com/eveonlineassets/developers/eve-sso-login-white-small.png" alt="Login with EVE Online" />
                        </a>
                    </li>
                }
            </ul>
            <form asp-controller="Search" asp-action="Index" method="get" class="form-inline well">
                <div class="form-group">
                    <select class="form-control custom-select unset-border-radius unset-border transparent-bg-color" name="queryScope">
                        <option value="Blueprints">Blueprints</option>
                        <option value="Ships">Ships</option>
                        <option value="Modules">Modules</option>
                        <option value="Charges">Charges</option>
                        <option value="Ores">Ores</option>
                        <option value="ItemTypes">Item Types</option>
                        <option value="Regions">Regions</option>
                        <option value="Constellations">Constellations</option>
                        <option value="Systems">Systems</option>
                        <option value="Stations">Stations</option>
                    </select>
                    <input type="text" class="form-control unset-border-radius unset-border transparent-bg-color" placeholder="Search Term" name="query" />
                </div>
                <button class="btn btn-outline-success my-2 my-sm-0 unset-border-radius" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <div id="footer" class="container">
            <footer>
                <p>&copy; 2018 - AuraWeb</p>
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/popper/popper.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/popper/popper.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap-4.1.3/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
