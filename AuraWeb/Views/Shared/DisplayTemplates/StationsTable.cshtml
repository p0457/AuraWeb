@using System.Collections
@model List<AuraWeb.Models.Station_V_Row>

<table class="table table-dark table-sm table-hover table-responsive-md">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Security</th>
            <th scope="col">Position</th>
            <th scope="col">Solar System</th>
            <th scope="col">Constellation</th>
            <th scope="col">Region</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody style="cursor:pointer">
        @foreach (var station in Model)
        {
            <tr onclick="location.href = '@(Url.Action("StationInfo", "Universe", new { id = station.Id }))'">
                <th scope="row">@station.Id</th>
                <td>@station.Name</td>
                <td>@station.Security.Class (@station.Security.Status)</td>
                <td>(@station.Position.X, @station.Position.Y , @station.Position.Z)</td>
                <td>@station.SolarSystemName</td>
                <td>@station.ConstellationName</td>
                <td>@station.RegionName</td>
                <td>@station.OperationName</td>
            </tr>
        }
    </tbody>
</table>